---
layout: layouts/base.njk
---
{%- css %}
/* Only include the syntax highlighter CSS on blog posts */
{% include "node_modules/prismjs/themes/prism-okaidia.css" %}
{%- endcss %}
<article class="post">
	<p class="pt-3 post-metadata">
		<small>
			<i class="bi bi-calendar4 has-text-grey-light" style="font-size: .7em"></i>
			<time class="has-text-grey-light" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate("dd LLL yyyy") }}</time>
		</small>
		{%- for tag in tags | filterTagList %}
			{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
			<span>
				<a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
				{%- if not loop.last %}, {% endif %}
			</span>
		{%- endfor %}
	</p>

	<h1 class="block title is-size-1 mt-3 mb-4">{{ title }}</h1>

	<div class="content">
		{{ content | safe }}
	</div>

	{%- if collections.posts %}
		{%- set previousPost = collections.posts | getPreviousCollectionItem %}
		{%- set nextPost = collections.posts | getNextCollectionItem %}
		{%- if nextPost or previousPost %}
			<ul class="links-nextprev">
				{%- if previousPost %}
					<li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
					</li>
				{% endif %}
				{%- if nextPost %}
					<li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
					</li>
				{% endif %}
			</ul>
		{%- endif %}
	{%- endif %}
</article>
